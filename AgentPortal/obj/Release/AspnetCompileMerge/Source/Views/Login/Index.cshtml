                </div>
                <div id="ap-login-form" class="my-4">
                    <form class="needs-validation" novalidate method="post" action="/App/PersonalInfo">
                        <fieldset>
                            <legend class="text-center mb-4 h6">Login to your agent account</legend>
                            <div class="form-floating mb-4">
                                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" autocomplete="off" required>
                                <label for="floatingInput">Email address</label>
                                <div class="invalid-feedback">
                                    Invalid Email Address
                                </div>
                            </div>
                            <div class="form-floating mb-4">
                                <input type="password" class="form-control" id="floatingPassword" placeholder="Password" required>
                                <label for="floatingPassword">Password</label>
                                <div class="invalid-feedback">
                                    Invalid Password
                                </div>
                            </div>
                            <div class="d-grid mb-3">
                                <button class="btn btn-primary" type="submit">Log In</button>
                            </div>
                            <div class="form-check mb-4">
                                @(Html.Kendo().CheckBox().Name("rememberMe").HtmlAttributes(new { @class = "form-check-input" }).Checked(false).Label("Remember Me"))
                            </div>
                            <a href="#">Forgot Your Password?</a>
                        </fieldset>
                    </form>
                </div>
                <p class="text-center">Unable to Login? <a href="#" class="fw-bold">Contact your admin</a></p>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    (function () {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>